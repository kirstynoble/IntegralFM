{# Hero Image Variables #}
{% set heroImage = '/assets/img/nature.jpeg' %}
{% if block.image %}
    {% for image in block.image.all() %}
        {% if heroImage == '' %}
            {% set heroImage = '/assets/img/nature.jpeg' %}
        {% else %}
            {% set heroImage = image.url %}
        {% endif %}
    {% endfor %}
{% endif %}

{# Homepage Banner and Internal Page Banners #}
<div class="banner {% if craft.request.getUrl() == siteUrl %}banner--large{% endif %}" style="background-image: url('{{ heroImage }}');">
    <div class="banner__container">
        <div class="banner__text wrapper">
            {% if block.headline %}
                <h2 class="banner__title {% if craft.request.getUrl() == siteUrl %}banner__title--large{% endif %}">{{ block.headline }}</h2>
            {% else%}
                <h2 class="banner__title {% if craft.request.getUrl() == siteUrl %}banner__title--large{% endif %}">We provide a unique service to our clients.</h2>
            {% endif %}
        </div>
    </div>
</div>

{% if craft.request.getUrl() != siteUrl %}
    <section class="main-content">
        <div class="page-title">
            <div class="wrapper">
                <div class="page-title__container">
                    <h3 class="page-title__title">{{ entry.title }}</h3>
                </div>
            </div>
        </div>
    </section>
{% endif %}
